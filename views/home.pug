extends layout

block content-header
block content
    .row
    .row
        .dark-background.center.notice
            span!= __("notice.paymentIssues")
    .row
        .dark-background.center
            h4.center= __("header.buyLicense")
            each product, id in products
                .col.s12.m6
                    .card
                        .card-image
                            a(href="order/" + id)
                                img.activator(src="images/" + product.image)
                            a.btn-floating.halfway-fab.waves-effect.waves-light.green(href="order/" + id)
                                i.material-icons=(product.price > 0 ? "attach_money" : "get_app")
                        .card-content.product-card
                            span.card-title= product.title
                            h4=(product.price ? "$" + product.price : __("free"))
                            p= product.description
